<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/backgroung2"
    android:layout_height="match_parent"
    tools:context=".quiz">

  <TextView
      android:id="@+id/tvheading"
      android:layout_width="283dp"
      android:layout_height="61dp"
      android:fontFamily="cursive"
      android:background="#EE426CEA"
      android:gravity="center_horizontal"
      android:text="Basic Questions."
      android:textAppearance="@style/TextAppearance.AppCompat.Display2"
      android:textColor="@color/black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.51"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.03" />

  <TextView
      android:id="@+id/etscore"
      android:layout_width="105dp"
      android:layout_height="45dp"
      android:text="Score-00"
      android:textAppearance="@style/TextAppearance.AppCompat.Body2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/tvoutof"
      app:layout_constraintHorizontal_bias="0.186"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvheading"
      app:layout_constraintVertical_bias="0.06" />

  <TextView
      android:id="@+id/tvoutof"
      android:layout_width="97dp"
      android:layout_height="42dp"
      android:text="1/5"
      android:textAppearance="@style/TextAppearance.AppCompat.Body2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.949"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.169" />

  <TextView
      android:id="@+id/tvquestion"
      android:layout_width="165dp"
      android:layout_height="71dp"
      android:text="Qn.1.what is the best answer"
      android:textAppearance="@style/TextAppearance.AppCompat.Body2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.13"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvheading"
      app:layout_constraintVertical_bias="0.176" />

  <Button
      android:id="@+id/btn1"
      android:layout_width="133dp"
      android:layout_height="76dp"
      android:text="kenya"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.161"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvquestion"
      app:layout_constraintVertical_bias="0.548" />

  <Button
      android:id="@+id/btn2"
      android:layout_width="133dp"
      android:layout_height="65dp"
      android:text="uganda"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.161"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn1"
      app:layout_constraintVertical_bias="0.189" />

  <Button
      android:id="@+id/btn3"
      android:layout_width="124dp"
      android:layout_height="72dp"
      android:text="Rwanda"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.905"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvoutof"
      app:layout_constraintVertical_bias="0.638" />

  <Button
      android:id="@+id/btn4"
      android:layout_width="128dp"
      android:layout_height="70dp"
      android:layout_marginBottom="16dp"
      android:text="tanzania"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.904"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn3"
      app:layout_constraintVertical_bias="0.227" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="251dp"
      android:layout_height="318dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.503"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvheading"
      app:layout_constraintVertical_bias="0.311"
      app:srcCompat="@drawable/newug" />

  <Button
      android:id="@+id/btnnext"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Next"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.244"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn2"
      app:layout_constraintVertical_bias="0.68" />

  <Button
      android:id="@+id/btnskip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Skip"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.641"
      app:layout_constraintStart_toEndOf="@+id/btnnext"
      app:layout_constraintTop_toBottomOf="@+id/btn4"
      app:layout_constraintVertical_bias="0.698" />

  <Button
      android:id="@+id/tvluck"
      android:layout_width="116dp"
      android:layout_height="64dp"
      android:text="GoodLuck"
      app:layout_constraintBottom_toTopOf="@+id/imageView3"
      app:layout_constraintEnd_toStartOf="@+id/tvoutof"
      app:layout_constraintHorizontal_bias="0.25"
      app:layout_constraintStart_toEndOf="@+id/etscore"
      app:layout_constraintTop_toTopOf="@+id/tvheading"
      app:layout_constraintVertical_bias="0.97" />

</androidx.constraintlayout.widget.ConstraintLayout>